{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contactos</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contacto.id }}</td>
            </tr>
            <tr>
                <th>Nombrecontacto</th>
                <td>{{ contacto.nombreContacto }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ contacto.ciudad }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contacto.email }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ contacto.telefono }}</td>
            </tr>
            <tr>
                <th>Movil</th>
                <td>{{ contacto.movil }}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{% if contacto.fechaCreacion %}{{ contacto.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contactos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contactos_edit', { 'id': contacto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
