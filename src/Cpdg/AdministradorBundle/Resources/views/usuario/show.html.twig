{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Razonsocial</th>
                <td>{{ usuario.razonSocial }}</td>
            </tr>
            <tr>
                <th>Nombrecontacto</th>
                <td>{{ usuario.nombreContacto }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Contrasena</th>
                <td>{{ usuario.contrasena }}</td>
            </tr>
            <tr>
                <th>Actualizacion</th>
                <td>{% if usuario.actualizacion %}{{ usuario.actualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if entity.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Cambioclave</th>
                <td>{% if usuario.cambioClave %}{{ usuario.cambioClave|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ultimaclave</th>
                <td>{{ usuario.ultimaClave }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{% if entity.public %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
