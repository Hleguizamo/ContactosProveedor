{% extends 'base.html.twig' %}

{% block body %}
    <h1>Logs</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Tipousuario</th>
                <td>{% if entity.tipoUsuario %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ log.usuario }}</td>
            </tr>
            <tr>
                <th>Accion</th>
                <td>{{ log.accion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if log.fecha %}{{ log.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('logs_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('logs_edit', { 'id': log.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
